Exercise 1:

public class birthdayCakeCandles {
	public static void main (String[] args) {
		int candles[] = {1,2,3,4,5,6,7,7,7,7,9,9};
		for (int i = 0; i < candles.length; i++) {
			System.out.print(candles[i]);
		}
		int max = candles[0];
		int count = 1;
		for (int j = 0; j < candles.length; j++) {
			if (candles[j] > max) {
				max = candles[j];
				count = 1;
			}
			else if (candles[j] == max) {
				count++;
			}
		}
		System.out.println("\nThe tallest candle is: " + max);
		System.out.println("The amount of them: " + count);
	}
}


